<div class="container mt-3" >
    <form action="/post" method="post" enctype="multipart/form-data">
        <label for="coverPhoto" class="form-label" style="font-size: 20px;">Cover Image</label>
        <div class="mb-3" style="display: flex; flex-direction: column; align-items: center;">
            <input type="file" 
            class="form-control" 
            id="coverImage" name="coverImage" 
            aria-describedby="CoverImage">
        </div>

        <label style="font-size: 20px;">Additional Images:</label><br>
        <div class="mb-3" style="display: flex; flex-direction: column; align-items: center;">
            <input type="file" name="postImages" accept="image/*" multiple>
        </div>

        <label for="Title" class="form-label" style="font-size: 20px;">Title</label>
        <div class="mb-3" style="display: flex; flex-direction: column; align-items: center;">
            
            <input type="text" 
            class="form-control" 
            id="title" name="title" 
            aria-describedby="title">
        </div>
        <label for="body" style="font-size: 20px;">Body</label>
        <div class="mb-3" style="display: flex; flex-direction: column; align-items: center;">
            <div class="form-floating">
                <textarea class="form-control" placeholder="Let the convo begin !" id="body" name="body"></textarea>
              </div>
        </div>

        <div>
            <label style="font-size: 20px;">Category</label>

            <div class="mb-3" style="display: flex;  justify-content: center;">
                <div style="margin: 5px;">
                    <input type="radio" id="tips" name="category" value="tips" checked>
                <label for="tips">Tips</label>
                </div>
                <div style="margin: 5px;">
                    <input type="radio" id="news" name="category" value="news">
                <label for="news">News</label>

                </div>
                <div style="margin: 5px;">
                    <input type="radio" id="guides" name="category" value="guides">
                <label for="guides">Guides</label> 
                </div>
                <div style="margin: 5px;">
                    <input type="radio" id="other" name="category" value="other">
                <label for="other">Other</label> 
                </div>                
            </div>
        </div>
        
        <div class="mb-3" style="display: flex; justify-content: center;">
            <button class="btn btn-info">Create</button>
        </div>
    </form>

    <p style="background-color: rgb(253, 235, 146);color: black; text-align: center; border-radius: 10px;">
        Keep it civilized <span style="color: gr;">:)</span>
    </p>

</div>  
