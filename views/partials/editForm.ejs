<div class="container mt-3" >
    <form action="/post/edit/<%= post._id %>" method="post">
        <div class="mb-3" style="display: flex; flex-direction: column; align-items: center;">
            <label for="Title" class="form-label">Title</label>
            <input type="text" 
            class="form-control" 
            id="title" name="title" 
            aria-describedby="title"
            value="<%= post.title %>" required>
        </div>
        <div class="mb-3" style="display: flex; flex-direction: column; align-items: center;">
            <label for="body">Body</label>
            <div class="form-floating">
                <textarea class="form-control" id="body" name="body"><%= post.body %></textarea>
              </div>
        </div>
        <div class="mb-3" style="display: flex; justify-content: center;">
            <button class="btn btn-info" type="submit">Edit</button>
        </div>
    </form>

    <p style="background-color: rgb(253, 235, 146);color: black; text-align: center; border-radius: 10px;">
        Keep it civilized <span style="color: gr;">:)</span>
    </p>

</div>  
