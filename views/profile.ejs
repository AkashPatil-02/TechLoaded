<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="/css/profile.css">
    <%- include('./partials/head')%>
    <title>My Profile</title>
   
</head>
<body>
    <%- include('./partials/nav')%>


    <div class="container mt-3" id="info">
        <h2>User Information</h2>
        <p>Name: <%=name%></p>
        <p>Email ID: <%=user.email %></p>
    </div>

    <div class="container mt-3" id="posts">
        <h2>User Posts</h2>

        <div class="container mt-3">
            <div class="row">
                <% post.forEach(post => { %>
                    <div class="col-md-3 mb-3">
                        <div class="card" style="width: 18rem;">
                            <img src="<%= post.imageURL %>" alt="Post Image">
                            <div class="card-body">
                                <h5 class="card-title"><%=post.title %></h5>
                                <a href="/post/<%=post._id%>" class="btn btn-primary">Open</a>
                                <a href="/post/edit/<%= post._id %>" class="btn btn-warning">Edit</a>
                                <a href="/profile" class="btn btn-danger" onclick="deletePost('<%= post._id %>')">Delete</a>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>

    <%- include('./partials/scripts')%>
    <%- include('./partials/themeScript') %>
    <%- include('./partials/deleteScript') %>
    
</body>
</html>